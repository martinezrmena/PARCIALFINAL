<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/location_search"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/search_address"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/location_search"
        android:onClick="onClick"
        android:text="Search" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/hospitals_nearby"
        tools:context=".MainMapsActivity" />

    <Button
        android:id="@+id/hospitals_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location_search"
        android:onClick="onClick"
        android:text="Hospitals" />

    <Button
        android:id="@+id/schools_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_search"
        android:layout_toEndOf="@+id/hospitals_nearby"
        android:onClick="onClick"
        android:text="Schools" />

    <Button
        android:id="@+id/restaurants_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_search"
        android:layout_toEndOf="@+id/schools_nearby"
        android:onClick="onClick"
        android:text="Restautants" />

    <Button
        android:id="@+id/B_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurants_nearby"
        android:layout_toEndOf="@+id/restaurants_nearby"
        android:onClick="onClick"
        android:text="To" />

</RelativeLayout>